generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}
  

model Category{
  id Int @id @default(autoincrement())
  title String
  description String
  userId Int @unique
  ticket Ticket[]
}

model Ticket{
  id Int @id @default(autoincrement())
  title String
  priority Int
  progress Int
  status Status @relation(fields: [statusId], references: [id])
  statusId Int @unique
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int @unique
}

model Status {
  id Int @id @default(autoincrement())
  title String @unique
  tickets Ticket[]
}